{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LBM",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run LBM",
            "type": "shell",
            "command": "./build/lbm_simulation",
            "group": "test",
            "problemMatcher": []
        }
    ]
}
